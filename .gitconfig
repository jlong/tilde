[user]
  name = John W. Long
  email = john@uservoice.com
[color]
  ui = auto
  status = auto
  diff = auto
  branch = auto
[alias]
  aa = !git add -u && git add . && git status
  st = status
  br = branch
  ci = commit
  cia = commit -a
  co = checkout
  df = diff
  lg = log
  up = pull
  changelog = log --no-merges --date=short --pretty=format:'%Cgreen%cd%Creset %Cred%h%Creset -%C(yellow)%d%Creset %cN: %s'
  mine = log --author=john
  delete = "!f() { git branch -d $1 && git push origin :$1; }; f"
  ls = !ls -G
  set-upstream = "!f() { branch=$(git st | head -1 | awk '{ print $4 }'); git branch --set-upstream-to=origin/$branch $branch; }; f"
  cls = !clear
  clear = !clear
  hub = !hub
  pull-request = !hub pull-request
  git = !git
[merge]
  summary = true
  tool = opendiff
[core]
  editor = vim --nofork
  legacyheaders = false
  excludesfile = /Users/jlong/.gitignore
[push]
  default = current
[repack]
  usedeltabaseoffset = true
[apply]
  whitespace = nowarn
[github]
  user = jlong
[svn]
  authorsfile = /Users/jlong/.gitusers
[push]
  default = tracking
