platform=`uname`

# Console
alias profile="vi ~/.bash_profile"
alias mkpath="mkdir -p"
alias ss="script/server"
alias cls=clear
alias flushdns="dscacheutil -flushcache"
if [[ "$platform" == 'Darwin' ]]; then
  alias ls="ls -p -h -G"
else
  alias ls="ls -p -h --color"
fi

# PostgreSQL
alias pgstart="pg_ctl -D /usr/local/var/postgres -l /usr/local/var/postgres/server.log start"
alias pgstop="pg_ctl -D /usr/local/var/postgres stop -s -m fast"

# Desktop Programs
alias fireworks="open -a '/Applications/Adobe Fireworks CS6/Adobe Fireworks CS6.app'"
alias photoshop="open -a '/Applications/Adobe Photoshop CC/Adobe Photoshop CC.app'"
alias illustrator="open -a '/Applications/Adobe Illustrator CC/Adobe Illustrator CC.app'"
alias preview="open -a '/Applications/Preview.app'"
alias xcode="open -a '/Developer/Applications/Xcode.app'"
alias coda="open -a '/Applications/Coda.app'"
alias tm="mate"
alias ios-simulator="open -a '/Applications/Xcode.app/Contents/Applications/iPhone Simulator.app'" 

# Ruby
alias stdlib="mate /System/Library/Frameworks/Ruby.framework/Versions/1.8/usr/lib/ruby/1.8/"
alias gems="mate /System/Library/Frameworks/Ruby.framework/Versions/1.8/usr/lib/ruby/gems/1.8/gems/"

# Git
alias gsm="git submodule init && git submodule update"
#alias git=hub
alias changelog="git log --no-merges --date=short --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cd)%Creset'"

# Tmux
alias tmux="TERM=xterm-256color tmux"

# WGET
alias wget="curl -O"

# Bundler
alias b="bundle"
alias bi="b install --path vendor"
alias bu="b update"
alias be="b exec"
alias binit="bi && b package && echo 'vendor/ruby' >> .gitignore"

# Work log
alias lw="logwork"

# UserVoice
alias babayaga-connect="ssh -L 9091:lbq:9090 -p 41145 dev@uvstaging08.com"
alias metroid-restart="sudo service metroid restart"
alias metroid-update="cd ~/go/src/metroid && git pull && GOPATH=/home/dev/go /home/dev/go/bin/godep go build -o /home/dev/bin/metroid metroid/metroid && cd - && metroid-restart"
alias redis-restart="sudo service redis-server restart"
alias memcache-restart="sudo service memcached restart"
alias unicorn-restart="sudo service unicorn restart"
alias rails-restart="unicorn-restart"
alias app-restart="metroid-restart && rails-restart && redis-restart && memcache-restart"
alias app-logs="sudo tail -f /home/dev/uservoice/log/development.log -f /var/log/upstart/unicorn.log"
